{
    "name": "eril/tbl-class",
    "description": "CLI tool to generate type-safe PHP constants from your MySQL/SQLite database schema. Tbl::class",
    "homepage": "https://github.com/erilshackle/php-tbl-class",
    "type": "library",
    "keywords": [
        "mysql",
        "sqlite",
        "schema",
        "constants",
        "generator",
        "cli",
        "database",
        "database-sync",
        "ci-cd"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Eril TS Carvalho",
            "homepage": "https://github.com/erilshackle",
            "email": "erilandocarvalho@exemplo.com",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/erilshackle/php-tbl-class/issues",
        "source": "https://github.com/erilshackle/php-tbl-class"
    },
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "symfony/yaml": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Eril\\TblClass\\": "src/"
        }
    },
    "bin": [
        "bin/tbl-class",
        "bin/tbl-class-logs"
    ],
    "scripts": {
        "tbl:class": "tbl-class",
        "tbl:sync": [
            "@tbl:class",
            "@tbl:class --check"
        ],
        "tbl:logs": "tbl-class-logs",
        "tbl-class-generate": "@tbl:class ."
    },
    "suggest": {
        "ext-yaml": "For faster YAML parsing"
    }
}