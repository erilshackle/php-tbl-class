{
    "name": "eril/tbl-class",
    "description": "CLI tool that generates PHP constants for database tables, columns, and foreign keys from your schema. Improves IDE autocomplete and reduces SQL typos.",
    "homepage": "https://github.com/erilshackle/php-tbl-class",
    "type": "library",
    "keywords": [
        "database-sync",
        "constants",
        "generator",
        "sql",
        "raw-sql",
        "database-schema",
        "code-generation",
        "php-cli",
        "mysql",
        "sqlite",
        "schema",
        "cli",
        "database",
        "ci-cd",
        "development",
        "tool"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Eril TS Carvalho",
            "homepage": "https://github.com/erilshackle",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/erilshackle/php-tbl-class/issues",
        "source": "https://github.com/erilshackle/php-tbl-class",
        "docs": "https://github.com/erilshackle/php-tbl-class#readme",
        "wiki": "https://github.com/erilshackle/php-tbl-class/wiki"
    },
    "require": {
        "php": ">=8.1",
        "ext-pdo": "*",
        "symfony/yaml": "^6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Eril\\TblClass\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eril\\TblClass\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/tbl-class",
        "bin/tbl-class-global",
        "bin/tbl-class-legacy",
        "bin/tbl-class-logs"
    ],
    "scripts": {
        "tbl:class": "tbl-class",
        "tbl:global": "tbl-class --global",
        "tbl:check": "tbl-class --check",
        "tbl:sync": [
            "@tbl:class --check",
            "@tbl:class"
        ],
        "tbl:logs": "tbl-class-logs",
        "tbl-class-generate": "@tbl:class .",
        "test": "phpunit",
        "test:ci": "@tbl:class && @tbl:class --check"
    },
    "suggest": {
        "ext-yaml": "For faster YAML parsing",
        "vlucas/phpdotenv": "For .env file support"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "3.x-dev"
        }
    }
}
